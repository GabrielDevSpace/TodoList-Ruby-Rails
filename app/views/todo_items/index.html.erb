<h1>Listagem de Items</h1>

<table>
  <tr>
    <th>Descricao</th>
    <th>Completo</th>
    <th>Completo em</th>
    <th>Todo list</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todo_items.each do |todo_item| %>
  <tr>
    <td><%= todo_item.descricao %></td>
    <td><%= todo_item.completo %></td>
    <td><%= todo_item.completo_em %></td>
    <td><%= todo_item.todo_list %></td>
    <td><%= link_to 'Mostrar', [todo_item.todo_list, todo_item] %></td>
    <td><%= link_to 'Editar', edit_todo_list_todo_item_path(todo_item.todo_list, todo_item) %></td>
    <td><%= link_to 'Excluir', [todo_item.todo_list, todo_item], method: :delete, data: { confirm: 'Voce tem certeza?' } %></td>
  </tr>
<% end %>
</table>

